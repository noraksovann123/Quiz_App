<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB">

    <!-- Header with back button -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Quiz Result"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/buttonLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Quiz Title and Image -->
            <TextView
                android:id="@+id/quizTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz Title"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/quizImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#EEEEEE"
                android:layout_marginBottom="24dp"
                android:contentDescription="Quiz Image" />

            <!-- Result Message -->
            <TextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulations!"
                android:textColor="#6949FF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Score -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Score"
                android:textColor="#666666"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 10"
                android:textColor="#333333"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Score Percentage -->
            <TextView
                android:id="@+id/scorePercentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#6949FF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Result Message -->
            <TextView
                android:id="@+id/resultMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keep practicing, you'll improve!"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <Button
            android:id="@+id/exploreButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Explore More"
            android:textAllCaps="false"
            android:backgroundTint="#F0F0F0"
            android:textColor="#333333"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/shareResultButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:textAllCaps="false"
            android:backgroundTint="#22C8E5"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play Again"
            android:textAllCaps="false"
            android:backgroundTint="#6949FF"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>