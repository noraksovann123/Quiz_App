<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFE"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/logo1"
                    android:contentDescription="Logo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quizzo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp" />

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/notificationsButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/notifications"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Purple Banner -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#7158E2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Play quiz together with\nyour friends now!"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:maxWidth="200dp" />

                        <Button
                            android:id="@+id/findFriendsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Find Friends"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/btn_outline_purple"
                            android:layout_marginTop="12dp"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="4dp"
                            android:elevation="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/userbubble"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="0dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/userbubble"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="40dp" />

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/userbubble"
                        android:layout_marginTop="90dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Discover Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discover"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewAllDiscover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all →"
                    android:textSize="14sp"
                    android:textColor="#7158E2"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Discover RecyclerView - this will be populated from Firebase -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/discoverRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Discover Empty State -->
            <TextView
                android:id="@+id/emptyDiscover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No quizzes available yet. Be the first to create one!"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Top Authors Section -->
            <LinearLayout
                android:id="@+id/authorsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Top Authors"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewAllAuthors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View all →"
                        android:textSize="14sp"
                        android:textColor="#7158E2"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Authors RecyclerView - will be populated from Firebase -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/authorsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingEnd="16dp"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <!-- Trending Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trending Now"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewAllTrending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all →"
                    android:textSize="14sp"
                    android:textColor="#7158E2"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Trending RecyclerView - will be populated from Firebase -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trendingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Trending Empty State -->
            <TextView
                android:id="@+id/emptyTrending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No trending quizzes yet."
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Top Picks Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Top Picks For You"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewAllTopPicks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all →"
                    android:textSize="14sp"
                    android:textColor="#7158E2"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Top Picks RecyclerView - will be populated from Firebase -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topPicksRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Top Picks Empty State -->
            <TextView
                android:id="@+id/emptyTopPicks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create more quizzes to get personalized picks!"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Spacer for bottom padding -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Add the FAB here -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/add"
        android:contentDescription="Create Quiz"
        app:backgroundTint="#7158E2"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>