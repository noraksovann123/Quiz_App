<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Create Quiz"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backButton" />

        <!-- Quiz Details Section -->
        <TextView
            android:id="@+id/detailsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Quiz Details"
            android:textColor="#9370DB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <EditText
            android:id="@+id/quizTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_input"
            android:hint="Quiz Title"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/detailsLabel" />

        <EditText
            android:id="@+id/quizDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_input"
            android:gravity="top"
            android:hint="Description (optional)"
            android:lines="3"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/quizTitleInput" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coverImageContainer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/dashed_border"
            app:layout_constraintTop_toBottomOf="@id/quizDescriptionInput">

            <ImageView
                android:id="@+id/coverImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_upload" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Add Cover Image (optional)"
                    android:textColor="#666666" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/optionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/coverImageContainer">

            <Button
                android:id="@+id/timeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_outline"
                android:text="30 sec"
                android:textAllCaps="false"
                android:textColor="#9370DB" />

            <Button
                android:id="@+id/pointsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_outline"
                android:text="10 pts"
                android:textAllCaps="false"
                android:textColor="#9370DB" />

            <Button
                android:id="@+id/quizTypeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_outline"
                android:text="Multiple Choice"
                android:textAllCaps="false"
                android:textColor="#9370DB" />
        </LinearLayout>

        <!-- Question Section -->
        <TextView
            android:id="@+id/questionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Question 1"
            android:textColor="#9370DB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/optionsContainer" />

        <EditText
            android:id="@+id/questionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_input"
            android:hint="Enter your question here"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/questionLabel" />

        <TextView
            android:id="@+id/answersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Answers (tap to select correct answer)"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionInput" />

        <!-- Blue Answer -->
        <LinearLayout
            android:id="@+id/blueAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/answer_background_selected"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/answersLabel">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#5D9CEC" />

            <EditText
                android:id="@+id/blueAnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Answer option 1"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Red Answer -->
        <LinearLayout
            android:id="@+id/redAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/answer_background_unselected"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/blueAnswerLayout">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#FC6E51" />

            <EditText
                android:id="@+id/redAnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Answer option 2"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Orange Answer -->
        <LinearLayout
            android:id="@+id/orangeAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/answer_background_unselected"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/redAnswerLayout">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#FFCE54" />

            <EditText
                android:id="@+id/orangeAnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Answer option 3"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Green Answer -->
        <LinearLayout
            android:id="@+id/greenAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/answer_background_unselected"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/orangeAnswerLayout">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#A0D568" />

            <EditText
                android:id="@+id/greenAnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:hint="Answer option 4"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Add Question / Create Quiz Buttons -->
        <Button
            android:id="@+id/addMoreQuestionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button_outline"
            android:text="Add Another Question"
            android:textAllCaps="false"
            android:textColor="#9370DB"
            app:layout_constraintTop_toBottomOf="@id/greenAnswerLayout" />

        <Button
            android:id="@+id/createQuizButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_button"
            android:text="Create Quiz"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addMoreQuestionButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>