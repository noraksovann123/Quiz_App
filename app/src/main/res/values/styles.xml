<resources>
    <!-- Base application theme -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryPurple</item>
        <item name="colorPrimaryDark">@color/primaryPurpleDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_gradient_background</item>
        <item name="android:statusBarColor">@color/primaryPurple</item>
    </style>
</resources>